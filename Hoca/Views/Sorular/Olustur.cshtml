@model SoruOlusturViewModel
@{
    ViewBag.Title = "Soru Sor";
}
<form asp-controller="Sorular" asp-action="Olustur" method="post">
    <input hidden asp-for="OgrenciId" class="form-control"/>
    <div class="form-group row">
        <label asp-for="SoruBaslik" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SoruBaslik" class="form-control" placeholder="Başlık" />
            <span asp-validation-for="SoruBaslik" class="text-danger"></span>
        </div>
        <label asp-for="SoruIcerik" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SoruIcerik" class="form-control" placeholder="Soru" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="SoruKategori" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="SoruKategori" asp-items="Html.GetEnumSelectList<SoruKategori>()">
                <option value="">Lütfen seçim yapın</option>
            </select>
            <span asp-validation-for="SoruKategori" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Sor</button>
        </div>
    </div>
</form>